<div class="container">
  <div class="row">
    <div class="edit-box col-7 my-3 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
      <h3 class="error-count"><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @user do |f| %>
      <div class="form-item">
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, id:"inputName" %>
      </div>
      <div class="form-item">
        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, accept:"image/*" %>
      </div>
      <div class="form-item">
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_area :introduction, id:"inputIntroduction" %>
      </div>
      <div class="form-item">
        <%= f.submit'Update User', class:'btn btn-lg btn-secondary rounded' %>
      </div>
      <% end %>
    </div>
  </div>
</div>