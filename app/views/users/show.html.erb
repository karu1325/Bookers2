<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="sidemenu">
      <%= render'books/info', user: @user %>

      <%= render'books/form', book_new: @book_new %>
      </div>
    </div>

    <div class="col-8">
      <h3>Books</h3>
        <table class="table">
          <thead>
            <tr>
              <th scop="col"></th>
              <th scop="col">Title</th>
              <th scop="col">Opinion</th>
            </tr>
          </thead>
          <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(@user.id) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>