<div class="container">
  <div class="row">
    <div class="edit-box col-7 my-3 mx-auto">
      <h1>Editing Book</h1>
      <% if @book.errors.any? %>
      <h3 class="error-count m-2"><%= @book.errors.count %> error prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <div class="form-item px-auto w-100">
          <label for="inputTitle">Title</label><br>
          <%= f.text_field :title, id:"inputTitle" %>
        </div>
        <div class="form-item px-auto w-100">
          <label for="inputBody">Opinion</label><br>
          <%= f.text_area :body, id:"inputBody" %>
        </div>
        <%= f.submit'Update Book', class:"btn btn-lg btn-success rounded" %>
      <% end %>
      <%= link_to'Show', book_path(@book.id) %>|
      <%= link_to'Back', books_path %>
    </div>
  </div>
</div>