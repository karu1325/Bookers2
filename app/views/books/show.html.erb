<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="sidemenu">
        <%= render'info', user: @user %>

        <%= render'form', book: @book_new %>
      </div>
    </div>

    <div class="col-8">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user.id) do %>
              <%= image_tag(@book.user.get_profile_image(100,100)) %><br>
              <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book) %></td>
          <td><%= @book.body %></td>
          <% if @book.user == current_user %>
            <td><%= link_to"Edit", edit_book_path(@book), class:'btn btn-sm btn-success rounded' %></td>
            <td><%= link_to"Destroy", book_path(@book), method: :delete, class:"btn btn-sm btn-danger rounded" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
