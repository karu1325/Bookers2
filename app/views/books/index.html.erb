<% if @book_new.errors.any %>
  <%= @book_new.erroes.count %>
  <ul>
    <% @book_new.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="sidemenu">
      <%= render'info', user: @user %>

      <%= render'form', book_new: @book_new %>
      </div>
    </div>

    <div class="col-8">
      <h3>Books</h3>
      <table class="table-hover">
        <thead>
          <tr>
            <th scope="col">  </th>
            <th scope="col"><strong>Title</strong></th>
            <th scope="col"><strong>Opinion</strong></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to image_tag(book.user.get_profile_image(100,100)), user_path(book.user.id) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
